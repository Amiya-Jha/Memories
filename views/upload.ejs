<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-blue-800 text-white py-5">
    <div class="flex justify-between items-center px-4">
      <a class="text-lg text-white" href="/profile"><i class="ri-arrow-left-s-line"></i> Profile</a>
      <h2 class="leading-none text-lg">Upload Post</h2>
      <a class="text-lg" href="/feed"><i class="ri-home-line"></i> Home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
      <div class="image w-[25vw] h-[25vw] rounded-full border-2 border-white flex items-center justify-center">
        <i class="text-5xl font-light ri-image-line"></i>
      </div>
      <button id="selectpic" class="text-green-500 capitalize">select picture</button>
    </div>
    <form id="uploadform" action="/upload" class="w-full px-6 py-3 mt-10" enctype="multipart/form-data" method="post">
      <input hidden type="file" name="image">
      <textarea name="caption"
        class="px-2 py-1 w-full bg-blue-800 border-2 h-20 border-zinc-500 resize-none rounded-md outline-none"
        placeholder="Write a caption..."></textarea>
      <input class="w-full px-2 py-2 bg-green-500 rounded-md" type="submit" value="Post">
    </form>
  </div>

  <script>
    document.querySelector("#selectpic")
      .addEventListener("click", function () {
        document.querySelector("#uploadform input").click();
      });
  </script>
